{
  "name": "polagent",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "elysia": "^1.4.21",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.9",
      "ai": "^6.0.3",
      "winston": "^3.17.0",
      "@ai-sdk/devtools": "^0.0.8",
      "@ai-sdk/google": "^3.0.13",
      "@ai-sdk/anthropic": "^3.0.24",
      "@ai-sdk/deepseek": "^2.0.12",
      "@ai-sdk/openai": "^3.0.20",
      "@orpc/client": "^1.12.2"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @polagent/db db:push",
    "db:studio": "turbo -F @polagent/db db:studio",
    "db:generate": "turbo -F @polagent/db db:generate",
    "db:migrate": "turbo -F @polagent/db db:migrate",
    "db:start": "turbo -F @polagent/db db:start",
    "db:watch": "turbo -F @polagent/db db:watch",
    "db:stop": "turbo -F @polagent/db db:stop",
    "db:down": "turbo -F @polagent/db db:down",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "prepare": "husky",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only"
  },
  "dependencies": {
    "@polagent/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@polagent/config": "workspace:*",
    "@types/bun": "catalog:",
    "husky": "latest",
    "lefthook": "latest",
    "lint-staged": "latest",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "ultracite": "7.1.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.6"
}
